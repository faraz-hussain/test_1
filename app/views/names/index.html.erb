<div class="page-header">
  <h1>
    Names
    <a href="/names/new" class="btn btn-lg btn-success">New Name</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Actions</th>
      </tr>

      <% @names.each do |name| %>
      <tr>
        <td>
          <a href="/names/<%= name.id %>" class="btn btn-primary">Show</a>
          <a href="/names/<%= name.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_name/<%= name.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @names, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
